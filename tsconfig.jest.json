{
    "compilerOptions": {
      "target": "ES2017",
      "lib": ["dom", "dom.iterable", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src", "jest.setup.ts", "jest.config.ts"],
    "exclude": ["node_modules"]
  }
  